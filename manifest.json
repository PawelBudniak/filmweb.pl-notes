{
    "manifest_version": 3,
    "name": "Filmweb notatki",
    "version": "1.3",
    "description": "Pozwala dodać notatkę do każdego filmu dodanego \"do obejrzenia\" na filmweb.pl. Dzięki temu nie zapomnisz już dlaczego dodałeś film do listy.",
    "permissions": [
      "storage"
    ],
    "action": {
      "default_popup": "load-data.html"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.filmweb.pl/film/*",
          "*://*.filmweb.pl/serial/*"
        ],
        "js": [
          "common.js",
          "film.js"
        ],
        "run_at": "document_end"
      },
      {
        "matches": [
          "*://*.filmweb.pl/user/*"
        ],
        "include_globs" :   ["*#/wantToSee*"],
        "js": [
          "common.js",
          "want-to-see.js"
        ],
        "run_at": "document_end"
      }
    ]
}
