{
    "manifest_version": 3,
    "name": "Filmweb notes",
    "version": "1.0",
    "description": "Makes it possible to add a note to each film on filmweb.pl",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.filmweb.pl/film/*",
          "*://*.filmweb.pl/serial/*"
        ],
        "js": [
          "common.js",
          "film.js"
        ],
        "run_at": "document_end"
      },
      {
        "matches": [
          "*://*.filmweb.pl/*"
        ],
        "js": [
          "common.js",
          "want-to-see.js"
        ],
        "run_at": "document_end"
      }
    ]
}
